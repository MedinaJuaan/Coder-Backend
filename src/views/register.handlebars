<div class="d-flex justify-content-center">
  <form
    action="/api/sessions/auth/register"
    method="post"
    style="width: 300px; padding: 10px;"
  >
    <div class="text-center mb-3">
      <p>Registrarse con github</p>
      <button type="button" class="btn btn-link btn-floating mx-1">
        <a href="/api/sessions/github"> Ingresar </a>
      </button>
    </div>
    <p class="text-center">Complete los datos para registrarse</p>

    <div class="mb-4 text-center">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="inputFirstNameRegister"
          name="firstName"
          placeholder="Firstname"
          required
        />
        <label for="input-firstNameLogin"><i
            class="bi bi-envelope-at me-1"
          ></i>Nombre</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="inputLastNameRegister"
          name="lastName"
          placeholder="LastName"
          required
        />
        <label for="input-lastNameLogin"><i
            class="bi bi-envelope-at me-1"
          ></i>Apellido</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="inputAgeRegister"
          name="age"
          placeholder="Age"
          required
        />
        <label for="input-ageLogin"><i
            class="bi bi-envelope-at me-1"
          ></i>Edad</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="email"
          class="form-control"
          id="inputEmailRegister"
          name="email"
          placeholder="Email"
          required
        />
        <label for="input-emailLogin"><i
            class="bi bi-envelope-at me-1"
          ></i>Email</label>
      </div>

      <div class="form-floating mb-3">
        <input
          type="password"
          class="form-control"
          id="inputPasswordRegister"
          name="password"
          placeholder="Password"
          required
        />
        <label for="input-passwordLogin"><i
            class="bi bi-eye-slash me-1"
          ></i>ContraseÃ±a</label>
      </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Registrarse</button>

  </form>
</div>