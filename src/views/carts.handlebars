<h1>Carrito de compras</h1>
{{#if products.length}}
<div class="container">
<div id="product-list" class="row gx-5">
  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Imagen</th>
          <th>Título</th>
          <th>Descripción</th>
          <th>Precio</th>
          <th>ID</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>
            <img src="{{this.image}}" class="img-thumbnail" alt="..." />
          </td>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this._id}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>
        {{else}}
  <p>No hay productos en el carrito.</p>
{{/if}}

  <script src="js/index.js"></script>