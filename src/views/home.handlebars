{{#if message}}
  <div class="alert alert-info text-center">{{message}}</div>
{{/if}}
{{#if username}}
  <div class="mt-3 ms-3">
    <div class="d-flex justify-content-center align-items-center">
      <h4 class="mt-1">Bienvenido, {{username}}. Tu Rol es {{rol}}</h4>
      <a
        href="/api/sessions/auth/logout"
        class="btn btn-danger btn-sm btnLogin ms-3 me-4"
      >
        <i class="bi bi-box-arrow-left me-2"></i>Logout
      </a>
    </div>
  </div>
{{else}}
  <div class="mt-3 text-center">
    <div>
      <h1>Bienvenido, para utilizar la pagina necesitas estar logueado</h1>
    </div>
    <a href="/api/sessions/auth/login" class="btn btn-primary btnLogin">
      <i class="bi bi-person-circle me-2"></i>Iniciar Sesi√≥n
    </a>
    <a href="/api/sessions/auth/register" class="btn btn-dark ms-2 me-3 btnRegister">
      <i class="bi bi-person-video2 me-2"></i>Registrarse
    </a>
  </div>
{{/if}}